<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUpdateActivity">

    <include
        android:id="@+id/Profile_Update_toolbar"
        layout="@layout/app_bar_layout"></include>

    <TextView
        android:layout_below="@id/Profile_Update_toolbar"
        android:layout_width="wrap_content"
        android:text="name"
        android:layout_height="wrap_content"
        android:id="@+id/txtprofile_update_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtprofile_update_contact"
        android:text="contact"
        android:layout_below="@+id/txtprofile_update_name"/>

    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtprofile_update_email"
        android:layout_below="@id/txtprofile_update_contact"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/profile_update_submit"
        android:layout_below="@+id/txtprofile_update_email"/>


</RelativeLayout>